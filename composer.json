{
    "name": "thenotsoft/form",
    "type": "library",
    "description": "The package helps with implementing data entry forms.",
    "keywords": [
        "yii",
        "form"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/http": "^1.2",
        "yiisoft/strings": "^2.0",
        "yiisoft/validator": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.18",
        "yiisoft/test-support": " ^1.3"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
